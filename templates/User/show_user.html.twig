{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
<header id="header" class="header d-flex align-items-center sticky-top">
  <div class="container-fluid container-xl position-relative d-flex align-items-center">

    <a href="{{ path ('app_page_index_user', {'idp': page.idp}) }}" class="logo d-flex align-items-center me-auto">
      <!-- Uncomment the line below if you also wish to use an image logo -->
<img src="{{asset('assets/img/4.png')}}" alt="" width="70" height="300">

      <h1 class="">CityVibe</h1>
    </a>

           <nav id="navmenu" class="navmenu">
    <ul>
        <li><a href="{{ path('app_index') }}" class="active">Accueil</a></li>
        <li class="dropdown has-dropdown">
            <a href="#"><span>Lieu</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
                <li><a href="{{ path('app_page_index_user') }}">Pages</a></li>
                <li><a href="{{ path('app_publication_index_user') }}">Publications</a></li>
            </ul>
        </li>
    </ul>
    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
</nav>
            <a class="btn-getstarted" href="{{ path('app_index') }}" style="background-color: green;">Mode Economique</a>
        </div>
</header>

<main class="main">
  <div class="jumbotron position-relative">
    <!-- Big image -->
    <img src="{{asset ( page.image) }}" data-aos="fade-in" class="aos-init aos-animate" alt="Big Image" width="1338" height="350">

  <!-- Page content -->
  <div class="container">
    <div class="row">
    <div class="position-absolute top-50 start-0 translate-middle-y"> <!-- Adjusted positioning for the logo -->

   <!-- Logo -->
        <img src="{{asset ( page.logo) }}" class="img-fluid rounded-circle mb-5" alt="Logo"  width="200" height="100 ">
      </div>
      <div class="col-md-8">
        <!-- Other information -->
        <table class="table">
          <tbody>
           <div class="row">
        <div class="col-md-4 d-flex justify-content-end mb-6" > <!-- Changed alignment to end -->
          <!-- page.nom -->
<h1 style=" width: 100%; margin-right: -70px; margin-left: -50px; text-align: center; display: inline-block;">{{ page.nom }}</h1>
        </div>
        
         <div class="container">
         </br></br>
      <div class="row">
        <div class="col-md-6">
          <!-- First card for Categorie, Description, and Localisation -->
          <div class="card border-0 shadow-sm rounded-3 mb-4" style="margin-left: 20px; width:500px ;">
            <div class="card-body">
             <h5 class="card-title" > Utilisateur & Catégorie & Description  </h5>
              <p class="card-text"><strong>utilisateur: </strong> {{ page.userRelation.nom }}</p>
              <p class="card-text"><strong>Catégorie:</strong> {{ page.categoriep }}</p>
              <p class="card-text"><strong>Description:</strong> {{ page.description }}</p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <!-- Second card for Contact and Ouverture -->
          <div class="card border-0 shadow-sm rounded-3 mb-10" style="margin-left: 170px; width:500px ;">
            <div class="card-body">
              <h5 class="card-title"> Localisation & Contact & Heures et date d'ouverture</h5>
              <p class="card-text"><strong>Contact:</strong> {{ page.contact }}</p>
              <p class="card-text"><strong>Heures  et date d'ouverture:</strong> {{ page.ouverture ? page.ouverture|date('Y-m-d H:i:s') : '' }}</p>
              <p class="card-text"><strong>Localisation:</strong> {{ page.localisation }}</p>

            </div>
          </div>
        </div>
      </div>
            
          </tbody>
        </table>
        <!-- Edit and delete buttons -->

      </div>
    </div>
  </div>
   <!-- Bouton de retour -->
        <div class="text-center mt-4">
            <a href="{{ path('app_page_index_user') }}" ><h1  style="color: #F99D26;"> ⟽ </h1></a>
        </div>
</main>

<footer id="footer" class="footer position-relative">

    <div class="container copyright text-center mt-4">
      <p>© <span>Copyright</span> <strong class="px-1">CityVibe</strong> <span>All Rights Reserved</span></p>
     
    </div></footer>
     <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
  
  <!-- Preloader -->
  <div id="preloader"></div>    <!-- Vendor JS Files -->
    <script src="{{ asset ('assets/vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
    <script src="{{ asset ('assets/vendor/php-email-form/validate.js')}}"></script>
    <script src="{{ asset ('assets/vendor/aos/aos.js')}}"></script>
    <script src="{{ asset ('assets/vendor/glightbox/js/glightbox.min.js')}}"></script>
    <script src="{{ asset ('assets/vendor/purecounter/purecounter_vanilla.js')}}"></script>
    <script src="{{ asset ('assets/vendor/swiper/swiper-bundle.min.js')}}"></script>

    <!-- Main JS File -->
    <script src="{{ asset ('assets/js/main.js')}}"></script>
